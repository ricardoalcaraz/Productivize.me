  "version": "0.2.0",
  "configurations": [
  
  {
    "name": "Debug Android (Hermes) - Experimental",
    "cwd": "${workspaceFolder}",
    "type": "reactnativedirect",
    "request": "launch",
    "platform": "android"
  },
  {
    "name": "Users Debugger",
    "type": "node",
    "request": "attach",
    "port": 9230,
    "address": "localhost",
    "localRoot": "${workspaceFolder}/users",
    "remoteRoot": "/app",
    "protocol": "inspector",
    "restart": true
  },
  {
    "name": "Habits Debugger",
    "type": "node",
    "request": "attach",
    "port": 9229,
    "address": "localhost",
    "localRoot": "${workspaceFolder}/habits",
    "remoteRoot": "/app",
    "protocol": "inspector",
    "restart": true
  },
  {
    "name": "Tasks Debugger",
    "type": "node",
    "request": "attach",
    "port": 9231,
    "address": "localhost",
    "localRoot": "${workspaceFolder}/tasks/",
    "remoteRoot": "/app",
    "protocol": "inspector",
    "restart": true
  },
  ]
}