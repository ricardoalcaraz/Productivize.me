    "version": "0.2.0",
    "configurations": [

        {
            "name": "Users Debugger",
            "type": "node",
            "request": "attach",
            "port": 9230,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/api/users",
            "remoteRoot": "/app",
            "protocol": "inspector",
            "restart": true
        },
        {
            "name": "Habits Debugger",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/api/habits",
            "remoteRoot": "/app",
            "protocol": "inspector",
            "restart": true
        },
        {
            "name": "Authentication Debugger",
            "type": "node",
            "request": "attach",
            "port": 9231,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/api/authentication",
            "remoteRoot": "/app",
            "protocol": "inspector",
            "restart": true
        },
    ]
}